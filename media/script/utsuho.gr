event utsuhoBehavior(utsuho: Actor) {
    // turn off gravity
    //utsuho.setShadow(false);
    utsuho.setHovering(true);
    utsuho.setFrictionBrake(0f);

    // select a random direction
    var dir = @Vec2f(rand(-1f, 1f), rand(-1f, 1f)).normalized;
    var angle = dir.angle.deg;
    var acc = dir * 5f;
    utsuho.accelerate(acc.x, acc.y, 0f);
}